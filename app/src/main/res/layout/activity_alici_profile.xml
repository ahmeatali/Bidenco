<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AliciProfileActivity">

    <ImageView
        android:id="@+id/profileAliciImage"
        android:layout_width="140dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/ic_launcher"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="55dp" />

    <TextView
        android:id="@+id/profileAliciName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="İsim"
        android:inputType="textPersonName"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/profileAliciImage"
        app:layout_constraintTop_toBottomOf="@+id/profileAliciImage"
        tools:ignore="LabelFor,MissingConstraints" />

    <TextView
        android:id="@+id/profileAliciSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Soyisim"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/profileAliciName"
        app:layout_constraintTop_toBottomOf="@+id/profileAliciName"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/profileAliciUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Kullanıcı Adı"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/profileAliciSurname"
        app:layout_constraintTop_toBottomOf="@+id/profileAliciSurname" />

    <TextView
        android:id="@+id/profileAliciBirthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Doğum Günü"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/profileAliciUsername"
        app:layout_constraintTop_toBottomOf="@+id/profileAliciUsername" />

    <TextView
        android:id="@+id/profileAliciAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Adres"
        android:inputType="phone"
        app:layout_constraintStart_toStartOf="@+id/profileAliciBirthday"
        app:layout_constraintTop_toBottomOf="@+id/profileAliciBirthday" />

    <TextView
        android:id="@+id/profileAliciEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="@+id/profileAliciAddress"
        app:layout_constraintTop_toBottomOf="@+id/profileAliciAddress" />

    <Button
        android:id="@+id/changeAliciProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Edit Profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/profileAliciEmail"
        app:layout_constraintTop_toBottomOf="@+id/profileAliciEmail" />


</androidx.constraintlayout.widget.ConstraintLayout>