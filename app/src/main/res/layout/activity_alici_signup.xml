<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AliciSignupActivity">

    <EditText
        android:id="@+id/semailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="192dp"
        android:ems="10"
        android:hint="E-mail Address"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/spasswordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/semailText"
        app:layout_constraintTop_toBottomOf="@+id/semailText" />

    <Button
        android:id="@+id/signupClicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="67dp"
        android:layout_marginTop="20dp"
        android:onClick="signupClicked"
        android:text="Sign Up"
        app:layout_constraintStart_toStartOf="@+id/spasswordText"
        app:layout_constraintTop_toBottomOf="@+id/spasswordText" />

    <Switch
        android:id="@+id/preButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="78dp"
        android:onClick="preButton"
        android:text="Do you already have account?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupClicked" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="172dp"
        android:layout_height="101dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="4dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/back"
            android:text="Satıcı olarak üye olmak için tıklayın."
            android:textColor="#000000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/saticiBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="saticiUyelikGecis"
            android:text="Satıcı Üye Ol" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>